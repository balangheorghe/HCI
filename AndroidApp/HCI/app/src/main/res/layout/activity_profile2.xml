<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity2"
    android:id="@+id/relativeLayout">

    <!--android:background="@android:color/holo_green_light"-->
    <!--android:background="@android:color/holo_red_dark"-->
    <!--android:background="@android:color/holo_blue_bright"-->

    <Button
        android:id="@+id/button_disconnect_room"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="53dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="53dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="71dp"
        android:background="@drawable/roundedbutton"
        android:onClick="disconnectRoom"
        android:text="Disconnect Room"
        android:textColor="@color/buttonsTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_new_room"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <TextView
        android:id="@+id/profile_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:textSize="20sp"
        tools:text="empty"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="127dp"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="empty" />

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_marginTop="216dp"
        android:gravity="center_horizontal"
        android:text="@string/please_scan_the_tag"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="242dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="222dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="372dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <Button
        android:id="@+id/sign_out"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginEnd="120dp"
        android:layout_marginLeft="124dp"
        android:layout_marginRight="120dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/roundedbutton"
        android:textColor="@color/buttonsTextColor"
        android:text="SIGN OUT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_new_room2" />

    <Button
        android:id="@+id/button_new_room"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:layout_marginLeft="54dp"
        android:layout_marginRight="43dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="71dp"
        android:background="@drawable/roundedbutton"
        android:onClick="refreshButton"
        android:text="New Room"
        android:textColor="@color/buttonsTextColor"
        app:layout_constraintEnd_toStartOf="@+id/button_new_room2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text2" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mirror2"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>